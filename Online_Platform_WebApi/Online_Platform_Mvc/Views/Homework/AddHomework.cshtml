@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Online_Platform_Mvc.Models.HomeworkModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddHomework</title>
</head>
<body>

    <h4>HomeworkModel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddHomework" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LessonId" class="control-label"></label>
                    <input asp-for="LessonId" class="form-control" />
                    <span asp-validation-for="LessonId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Directive" class="control-label"></label>
                    <input asp-for="Directive" class="form-control" />
                    <span asp-validation-for="Directive" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryDate" class="control-label"></label>
                    <input asp-for="DeliveryDate" class="form-control" />
                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

  

</body>
</html>
